{
  "manifest_version": 2,
  "name": "Smile Bitrix24",
  "version": "1.0",
  "description": "Добавьте изюминку в дизайн корпоративных порталов Битрикс24",
  "icons": {
    "48": "assets/img/icon.png",
    "96": "assets/img/icon-x2.png"
  },

  "applications": {
    "gecko": {
      "id": "test@bitrix24.ru",
      "strict_min_version": "45.0"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "assets/img/icon.png",
      "96": "assets/img/icon-x2.png"
    },
    "default_title": "Bitrix Settings"
  },

  "options_ui": {
    "browser_style": false,
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [{
      "matches": [
        "*://*.bitrix24.ru/*"
      ],
      "js": [
        "js/extension.js",
        "js/bitrix.js"
      ]
  }],

  "permissions": [
    "storage"
  ]
}