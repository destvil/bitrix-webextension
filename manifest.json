{
  "manifest_version": 2,
  "name": "Smile Bitrix24",
  "version": "1.0",
  "description": "Добавьте изюминку в дизайн корпоративных порталов Битрикс24",

  "applications": {
    "gecko": {
      "id": "test@bitrix24.ru",
      "strict_min_version": "45.0"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Bitrix Settings"
  },

  "options_ui": {
    "browser_style": false,
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [{
      "matches": [
        "*://*/*"
      ],
      "js": [
        "assets/js/extension.js",
        "assets/js/bitrix.js",
        "assets/js/injector.js",
        "script.js"
      ]
  }],

  "permissions": [
    "storage",
    "activeTab"
  ]
}